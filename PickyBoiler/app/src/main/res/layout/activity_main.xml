<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background"
    android:id="@+id/mainlayout"
    tools:context="pickyboiler.pickyboiler.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_home_header">
        <ImageView
            android:id="@+id/appheader"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/oncampusheader"
            android:contentDescription="PickyBoiler"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/prefbutton"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:background="@drawable/sidebarbutton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:layout_marginStart="20dp"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:onClick="goToPreferences"/> TODO: EDIT THIS

    </RelativeLayout>

</RelativeLayout>