<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/bg"
            android:layout_width="500dp"
            android:layout_height="350dp"
            android:layout_alignTop="@+id/cbutton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/popup_bg" />

        <Button
            android:id="@+id/cbutton"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="51dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lbutton"
            android:layout_marginTop="55dp"
            android:text="Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginTop="129dp"
            android:text="Add this item to favorites?"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/lbutton"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop ="35dp"
            android:layout_marginBottom="200dp"
            android:layout_marginStart="55dp"
            android:text="Yes" />

        <Button
            android:id="@+id/rbutton"
            android:layout_width="149dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lbutton"
            android:layout_marginEnd="44dp"
            android:text="Nutrition Information" />

    </RelativeLayout>

</LinearLayout>
