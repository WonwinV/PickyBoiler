<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/cbutton"
            android:layout_width="33dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginStart="-62dp"
            android:layout_marginTop="87dp"
            android:layout_toEndOf="@+id/rbutton"
            android:src="@drawable/closepopup" />

        <ImageView
            android:layout_width="332dp"
            android:layout_height="545dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/popup_bg" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="91dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="145dp"
            android:text="Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="191dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginTop="226dp"
            android:text="Add this item to favorites?"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/lbutton"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="208dp"
            android:layout_marginStart="67dp"
            android:text="Yes" />

        <Button
            android:id="@+id/rbutton"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lbutton"
            android:layout_marginEnd="62dp"
            android:text="Nutrition Information" />

    </RelativeLayout>

</LinearLayout>
